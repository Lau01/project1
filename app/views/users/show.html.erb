

<h2><%= @user.name %>'s Profile</h2>
<div class="container indexReviewBox">
  <div class="row">
    <div class="col-10">
      <div class="col-12 col-md-8">
        <div class="reviewsBox reviewsScrollIndex">
          <% @user.reviews.each do |r| %>
            <div class="reviewCard">
              <div class="reviewTitle">
                <p class="inlineBlock floatLeft"><%= image_tag r.user.image, class: "profileImage" %></p>
                <p class="inlineBlock"><%=link_to r.user.name, user_path(r.user) %> on ENTERDATE about <%= link_to r.restaurant.name, restaurant_path(r.restaurant) %>:</p>
            </div>
              <div class="reviewContent">
                <%= r.content %>
              </div>
              <div class="reviewImageBox">
                <%= cl_image_tag r.image, class: "reviewImage" %>
              </div>
              <div class="favReview">
                Rating:<%= r.rating %> / 5.0 |
                Likes: <%= r.liked_by.length %>
              </div>
            </div>
            <% end %>
          </div>
      </div>
    </div>


    <div class="col">
      <% if @current_user.present? %>
        <%= link_to 'Share your experience', new_review_path %>
        Likes?
        <br>
        Follows?
      <% end %>
      <br>
      <% if @current_user.present? && @current_user == @user %>
        <%= link_to 'Edit Profile', edit_user_path %>
      <% end %>
    </div>
  </div>
</div>
