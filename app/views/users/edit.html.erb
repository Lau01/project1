<h1>Users#edit</h1>
<div>
  <%= form_for @user, html: {multipart: true} do |f| %>
  <div class="form-row">
    <div class="col">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="col">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="col">
      <%= f.label :image, 'Profile Image' %>
      <%= f.cl_image_upload :image %>
    </div>

  </div>

  <%= f.submit %>
    <% end %>
  </div>


<div>
  <% if flash[:errors].present? %>
    Please correct:
    <ol>
      <% flash[:errors].each do |e| %>
        <li><%= e %></li>
      <% end %>
    </ol>
  <% end %>
</div>
