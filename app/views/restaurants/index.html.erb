<h2>ALL RESTAURANTS</h2>


  <% @restaurants.each do |r| %>
    <div class="restaurantBox">
      <%= link_to r.name, restaurant_path(r.id)  %> Open: (<%= r.open_hrs %>)
      <ul>
          <li>Address: <%= r.address %></li>
          <li>Open Hours: <%= r.open_hrs %></li>
          <li>Average Cost for two: $<%= r.cost_two %></li>
          <li>Phone: <%= r.phone %></li>
          <%= image_tag r.image %>
      </ul>
      Cuisines:<% r.cuisines.each do |cuisine| %>
        <%=link_to cuisine.name, cuisine_path(cuisine) %>
      <% end %>
    </div>
  <% end %>
