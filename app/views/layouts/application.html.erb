<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display" rel="stylesheet">

  </head>

  <body>
    <div class="mainContainer">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="<%=  %>">Hats</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to 'Home', restaurants_path, class:'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Reviews', reviews_path, class:'nav-link' %>
            </li>
            <li class="nav-item">
              <% if @current_user.present? %>
                <%= link_to 'My Profile', user_path(@current_user.id), class:'nav-link' %>
              <% else %>
                <%= link_to 'My Profile', login_path, class:'nav-link' %>
                <% end %>
            </li>
          </ul>
          <span class="navbar-text nav-link">
            <% if @current_user.present? %>
              <p class="inlineBlock">Welcome <%= @current_user.name %></p>
              <%= cl_image_tag @current_user.image, class: "profileImage" %>
              <%= link_to 'Log Out', login_path, method: 'delete', class:'nav-link inlineBlock' %>
            <% else %>
              <%= link_to 'Log In', login_path, class:'nav-link inlineBlock' %>
              <%= link_to 'Sign Up', new_user_path, class:'nav-link inlineBlock' %>
            <% end %>
          </span>
        </div>
      </nav>
      <%= yield %>
      <div class="footerBar">
        <div class="container">
          <div class="row">
            <div class="col-8">
              <ul class="footerList">
                <li>Privacy</li>
                <li>Legal</li>
                <li>Terms and Conditions</li>
              </ul>
            </div>
            <div class="col-4 arialFont">Â© 2018 all rights reserved</div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
